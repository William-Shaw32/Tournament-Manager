{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run JavaFX (Maven)",
            "type": "shell",
            "command": "mvn",
            "args": [
                "-q",
                "javafx:run"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "MAVEN_OPTS": "--sun-misc-unsafe-memory-access=allow"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
